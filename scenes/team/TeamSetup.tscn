	if slot_index < 0 or slot_index >= current_team.size():
		return
	
	var card_id = current_team[slot_index]
	current_team.remove_at(slot_index)
	print(\"âœ… ç§»é™¤ %s å¾éšŠä¼\" % card_id)
	
